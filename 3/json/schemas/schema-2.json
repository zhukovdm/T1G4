{
  "$id": "https://T1G4.DOX.cz/schemas/producers",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Producers",
  "description": "List of producers",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "@context": {
        "type": "string",
        "format": "iri"
      },
      "uri": {
        "type": "string",
        "pattern": "^producer:[A-Za-z0-9]+$"
      },
      "type": {
        "type": "string",
        "pattern": "^Producer$"
      },
      "legalName": {
        "type": "object",
        "patternProperties": {
          "(en)|(cs)|(de)": { "type": "string" }
        },
        "minProperties": 1,
        "additionalProperties": false
      },
      "produces": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "pattern": "^bus:[0-9]+$"
                },
                "type": {
                  "type": "string",
                  "pattern": "^Bus$"
                },
                "capacity": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "consumption": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "purchasePrice": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "licensePlateNumber": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "uri",
                "type",
                "capacity",
                "consumption",
                "purchasePrice",
                "licensePlateNumber"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "pattern": "^train:[0-9]+$"
                },
                "type": {
                  "type": "string",
                  "pattern": "^Train$"
                },
                "capacity": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "consumption": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "purchasePrice": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "electricMotor": {
                  "type": "boolean"
                },
                "europeanVehicleNumber": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "uri",
                "type",
                "capacity",
                "consumption",
                "purchasePrice",
                "electricMotor",
                "europeanVehicleNumber"
              ],
              "additionalProperties": false
            }
          ]
        },
        "minItems": 1
      }
    },
    "required": [
      "@context",
      "uri",
      "type",
      "legalName",
      "produces"
    ],
    "additionalProperties": false
  },
  "$defs": {
    "positive_int": {
      "$id": "https://T1G4.DOX.cz/schemas/positive_int",
      "type": "integer",
      "minimum": 1
    }
  }
}
