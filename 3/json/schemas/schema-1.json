{
  "$id": "https://T1G4.DOX.cz/schemas/agencies",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agencies",
  "description": "List of agencies",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "@context": {
        "type": "string",
        "format": "iri"
      },
      "uri": {
        "type": "string",
        "pattern": "^agency:[A-Za-z0-9-]+$"
      },
      "type": {
        "type": "string",
        "pattern": "^Agency$"
      },
      "legalName": {
        "type": "object",
        "patternProperties": {
          "^(en)|(cs)$": { "type": "string" }
        },
        "minProperties": 1,
        "additionalProperties": false
      },
      "phone": {
        "type": "string",
        "pattern": "^tel:\\+[0-9-]+$"
      },
      "email": {
        "type": "string",
        "pattern": "^mailto:[A-Za-z0-9-_\\.]+@[A-Za-z0-9-_\\.]+\\.[A-Za-z0-9-_\\.]+$"
      },
      "owns": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$id": "https://T1G4.DOX.cz/schemas/bus",
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "pattern": "^bus:[0-9]+$"
                },
                "type": {
                  "type": "string",
                  "pattern": "^Bus$"
                },
                "capacity": { "$ref": "#/$defs/positive_int" },
                "consumption": { "$ref": "#/$defs/positive_int" },
                "purchasePrice": { "$ref": "#/$defs/positive_int" },
                "licensePlateNumber": { "type": "string" },
                "rides": { "$ref": "#/$defs/connection" }
              },
              "required": [
                "uri",
                "type",
                "capacity",
                "consumption",
                "purchasePrice",
                "licensePlateNumber",
                "rides"
              ],
              "additionalProperties": false,
              "$defs": {
                "positive_int": {
                  "$id": "https://T1G4.DOX.cz/schemas/positive_int",
                  "type": "integer",
                  "minimum": 1
                },
                "connection": {
                  "$id": "https://T1G4.DOX.cz/schemas/connection",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "uri": {
                        "type": "string",
                        "pattern": "^conn:[0-9]+-[0-9]+$"
                      },
                      "type": {
                        "type": "string",
                        "pattern": "^Connection$"
                      },
                      "belongsTo": {
                        "$id": "https://T1G4.DOX.cz/schemas/route",
                        "type": "object",
                        "properties": {
                          "uri": {
                            "type": "string",
                            "pattern": "^route:[0-9]+$"
                          },
                          "type": {
                            "type": "string",
                            "pattern": "^Route$"
                          },
                          "length": {
                            "type": "number",
                            "exclusiveMinimum": 0.0
                          },
                          "validFrom": {
                            "type": "string",
                            "format": "date"
                          },
                          "validTo": {
                            "type": "string",
                            "format": "date"
                          },
                          "startsWith": { "$ref": "#/$defs/station" },
                          "endsWith": { "$ref": "#/$defs/station" }
                        },
                        "required": [
                          "uri",
                          "type",
                          "length",
                          "validFrom",
                          "validTo",
                          "startsWith",
                          "endsWith"
                        ],
                        "additionalProperties": false,
                        "$defs": {
                          "station": {
                            "type": "object",
                            "properties": {
                              "uri": {
                                "type": "string",
                                "pattern": "^station:[0-9]+$"
                              },
                              "type": {
                                "type": "string",
                                "pattern": "^(TrainStation)|(BusStation)$"
                              },
                              "stationName": {
                                "type": "object",
                                "patternProperties": {
                                  "^(en)|(cs)$": { "type": "string" }
                                },
                                "minProperties": 1,
                                "additionalProperties": false
                              },
                              "capacity": {
                                "type": "integer",
                                "minimum": 1
                              }
                            },
                            "required": [
                              "uri",
                              "type",
                              "stationName",
                              "capacity"
                            ],
                            "additionalProperties": false
                          }
                        }
                      },
                      "connects": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "uri": {
                              "type": "string",
                              "pattern": "^stop:[0-9]+$"
                            },
                            "type": {
                              "type": "string",
                              "pattern": "^Stop$"
                            },
                            "gps": {
                              "type": "string",
                              "pattern": "^[0-9]{1,2}\\.[0-9]{7}N, [0-9]{1,2}\\.[0-9]{7}E$"
                            },
                            "arrivalTime": {
                              "type": "string",
                              "format": "time"
                            },
                            "departureTime": {
                              "type": "string",
                              "format": "time"
                            }
                          },
                          "required": [
                            "uri",
                            "type",
                            "gps",
                            "arrivalTime",
                            "departureTime"
                          ],
                          "additionalProperties": false
                        },
                        "minItems": 2
                      }
                    },
                    "required": [
                      "uri",
                      "type",
                      "belongsTo",
                      "connects"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            },
            {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "pattern": "^train:[0-9]+$"
                },
                "type": {
                  "type": "string",
                  "pattern": "^Train$"
                },
                "capacity": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "consumption": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "purchasePrice": {
                  "$ref": "https://T1G4.DOX.cz/schemas/positive_int"
                },
                "electricMotor": { "type": "boolean" },
                "europeanVehicleNumber": { "type": "string" },
                "rides": {
                  "$ref": "https://T1G4.DOX.cz/schemas/connection"
                }
              },
              "required": [
                  "uri",
                  "type",
                  "capacity",
                  "consumption",
                  "purchasePrice",
                  "electricMotor",
                  "europeanVehicleNumber",
                  "rides"
                ],
                "additionalProperties": false
            }
          ]
        }
      }
    },
    "required": [
      "@context",
      "uri",
      "type",
      "legalName",
      "phone",
      "email",
      "owns"
    ],
    "additionalProperties": false
  }
}
