{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/T1G4/DOX/schema.json",
  "title": "Regional transport",
  "description": "An overview on regional bus and train connections",
  "type": "array",
  "items": 
  {
    "type": "object",
    "connectionId":
    {
        "description": "Identifier of the connection",
        "type":"string",
        "pattern": "[0-9]+-[0-9]+"
    },
    "stops":
    {
        "description":"Stops on a connection",
        "type":"array",
        "items":
        {
            "type":"object"
        }
    }
    
  }
    
  
}