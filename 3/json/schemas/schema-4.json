{
  "$id": "https://T1G4.DOX.cz/schemas/entities",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Entities",
  "description": "List of entities",
  "type": "array",
  "items": {
    "$id": "https://T1G4.DOX.cz/schemas/entity",
    "type": "object",
    "properties": {
      "@context": {
        "type": "string",
        "format": "iri"
      },
      "uri": { "type": "string" },
      "type": { "type": "string" },
      "label": { "$ref": "#/$defs/lang_pack" },
      "comment": { "$ref": "#/$defs/lang_pack" },
      "domain": { "$ref": "#/$defs/func_pack" },
      "range": { "$ref": "#/$defs/func_pack" },
      "subClassOf": { "$ref": "#/$defs/func_pack" }
    },
    "required": [
      "@context",
      "uri"
    ],
    "additionalProperties": false,
    "$defs": {
      "lang_pack": {
        "type": "object",
        "patternProperties": {
          "^(en)|(cs)$": { "type": "string" }
        },
        "minProperties": 1,
        "additionalProperties": false
      },
      "func_pack": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
            "pattern": "^[A-Za-z-]+:[A-Za-z-]+$"
          }
        },
        "required": [
          "uri"
        ],
        "additionalProperties": false
      }
    }
  }
}
