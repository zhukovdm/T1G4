{
  "$id": "https://T1G4.DOX.cz/schemas/stations",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Stations",
  "description": "List of stations",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "@context": {
        "type": "string",
        "format": "iri"
      },
      "uri": {
        "type": "string",
        "pattern": "^station:[A-Za-z0-9]+$"
      },
      "type": {
        "type": "string",
        "pattern": "^(BusStation)|(TrainStation)$"
      },
      "stationName": {
        "type": "object",
        "patternProperties": {
          "^cs$": { "type": "string" }
        },
        "minProperties": 1,
        "additionalProperties": false
      },
      "capacity": {
        "type": "integer",
        "minimum": 1
      },
      "serves": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "uri": {
              "type": "string",
              "pattern": "^stop:[0-9]+$"
            },
            "type": {
              "type": "string",
              "pattern": "^Stop$"
            },
            "gps": {
              "type": "string",
              "pattern": "^[0-9]{1,2}\\.[0-9]{7}N, [0-9]{1,2}\\.[0-9]{7}E$"
            },
            "arrivalTime": {
              "type": "string",
              "format": "time"
            },
            "departureTime": {
              "type": "string",
              "format": "time"
            },
            "followedBy": {
              "type": "string",
              "pattern": "^stop:[0-9]+$"
            }
          },
          "required": [
            "uri",
            "type",
            "gps",
            "arrivalTime",
            "departureTime"
          ],
          "additionalProperties": false
        }
      }
    }
  }
}
